# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_GROUP_CHAT_ID=your_telegram_group_id_here

# WhatsApp Configuration
ENABLE_WHATSAPP=true
# CREATE_AUTH_ARCHIVE - создавать ли автоматические архивы сессии (по умолчанию: false)
# Включайте только если нужно переносить сессию между серверами
CREATE_AUTH_ARCHIVE=false

# Webhook Configuration
WEBHOOK_PORT=3001
WEBHOOK_SECRET=your_webhook_secret_here

# Environment
NODE_ENV=production